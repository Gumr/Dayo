.example {
    display: block;
    width: 100%;
    height: 100rpx;
}

.marquee_box {
    width: 100%;
    position: relative;
}

.marquee_text {
    white-space: nowrap;
    position: absolute;
    top: 0;
}

@keyframes around {
    from {
        margin-left: 214px;
    }

    to {
        margin-left: var(--marqueeWidth--);
    }
}

.marquee_container {
    height: 40rpx;
    line-height: 40rpx;
    position: relative;
    width: 100%;
}

.marquee_text1 {
    color: green;
    font-size: 28rpx;
    display: inline-block;
    white-space: nowrap;
    animation-name: around;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
}